---
import Layout from '@layouts/Layout.astro';
import FormattedDate from '@components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];
const { title, author, pubDate, modDate, heroImage, description, tags } = Astro.props;
---

<Layout title={title}>
    <div class="flex flex-col w-dvw px-10 gap-5 grow">
        <h1>{title}</h1>
        <h3>By: {author} on {pubDate}{modDate && ( `(Updated: {modDate} + )` ) }</h3> 
        <div class="flex flex-row flex-wrap gap-2 p-3">{ tags.map(t => (<span class="bg-red-100 shadow-md">{t} </span>)) }</h3>
        <div class="p-10 leading-relaxed">
            <slot />
        </div>
    </div>
</Layout>
