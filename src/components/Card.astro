---
const {title, href, img} = Astro.props;
import { Image } from 'astro:assets';
---
<a href={href} class="w-[24rem]">
    <div class="flex flex-col p-2 gap-2 justify-around items-stretch shadow-md bg-red-100 text-black">
        <div> {img && <Image src={img} alt=`Image of {title}` class="shadow:md" />} </div>
        <h2 class="p-2">{title}</h2>
        <div class="text-justify text-wrap overflow-ellipsis line-clamp-5">
            <slot />
        </div>
    </div>
</a>
