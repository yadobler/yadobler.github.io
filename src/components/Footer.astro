---
import GithubIcon   from "@assets/icons/github.svg";
import MailIcon     from "@assets/icons/mail.svg";
import LinkedinIcon from "@assets/icons/linkedin.svg";

interface Socials {
    name: string;
    href: string;
    logo: any;
}

const socials : [Socials] = [
    {name:"Github", href: "https://github.com/Yadobler", logo: GithubIcon },
    {name:"Mail", href: "/contactme", logo: MailIcon },
    {name:"Linkedin", href: "https://www.linkedin.com/in/yuknavell/", logo: LinkedinIcon }
]

const year = new Date().getFullYear()
---
<footer class="flex flex-wrap justify-between items-center gap-4 py-4 px-10 max-w-screen bg-sky-100">
    <div class="flex justify-center items-center">
