    <div class="flex justify-center items-center gap-4 flex-wrap">
        {socials.map(s => (
        <a href={s.href} class="flex items-center gap-2" key={s.name}>
            <s.logo title={s.name} class="w-6 h-6 flex-grow-0" /> 
        </a>
    ))}
    </div> 
